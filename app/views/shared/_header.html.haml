%section#top-header.row
  %h1.col-md-1
    = link_to "MyFLiX", root_path
  - if logged_in?
    %ul.col-md-6.clearfix
      %li= link_to "Videos", home_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path
      %li= link_to "Invite", new_invitation_path
      %li= link_to "Sign Out", sign_out_path
      %li= link_to "Account", "#"
      %li= link_to "Billing", "#"
      %p= "Welcome #{current_user.full_name}"
  - else
    %ul.col-md-6.clearfix
      %li= link_to "Videos", home_path
      %li= link_to "Sign In", sign_in_path
      %li= link_to "Register", register_path
  = form_tag search_videos_path, method: "GET", class: "span2 for-search" do
    %input.form-control(name="search_term" type="text" placeholder="Search for videos here")
    %button.btn.btn-default(type="submit") Search